      section.latest-news
        h2.first-title
            a(href="") Tin tức mới nhất
        .list-latest-news 
          each data in datas['newest_news']
            a(href=data.link, target="_blank").latestNews 
              img(src=data.main_image, alt="").news-image
              h3.news-title #{data.title}
              .news-item 
                  img(src= data.publication_image, alt="").name-university 
                  span.news-time #{moment(data.date).format('YYYY-MM-DD')}  
         

      section.news-event
        h2.first-title
            a(href="/search_category?category='news'") Tin tức sự kiện
        if datas['news'].slice(0, 6).length > 0
          .list-news-event 
            each data in datas['news'].slice(0, 6)
              a(href= data.link, target="_blank").news
                img(src= data.main_image, alt="").news-image
                h3.news-title #{data.title}
                .news-item 
                  img(src=data.publication_image , alt="").name-university
                  span.news-time #{moment(data.date).format('YYYY-MM-DD')}
          if datas['news'].length > 6
            br
            a(href="/search_category?category='news'").see-more XEM THEM
          

      section.addmisions
        h2.first-title
            a(href="/search_category?category='addmissions'") Tuyển sinh
        if datas['addmisions'].slice(0, 6).length > 0
          .list-addmisions 
            each data in datas['addmisions'].slice(0, 6)
              a(href= data.link,target="_blank").news-addmisions
                img(src= data.main_image, alt="").news-image
                h3.news-title #{data.title}
                .news-item 
                  img(src=data.publication_image, alt="").name-university
                  span.news-time #{moment(data.date).format('YYYY-MM-DD')}
          if datas['addmisions'].length > 6
            a(href="/search_category?category='addmissions'").see-more XEM THEM

      section.technology
        h2.first-title
            a(href="/search_category?category='technology'") Khoa học công nghệ
        if datas['technology'].slice(0, 6).length > 0
          .list-technology 
            each data in datas['technology'].slice(0, 6)
              a(href= data.link,target="_blank").news-technology
                img(src= data.main_image, alt="").news-image
                h3.news-title #{data.title}
                .news-item 
                  img(src=data.publication_image, alt="").name-university
                  span.news-time #{moment(data.date).format('YYYY-MM-DD')}
          if datas['technology'].length > 6
            a(href="/search_category?category='technology'").see-more XEM THEM
          
